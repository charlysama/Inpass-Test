<SettingScreen>:
    FloatLayout:

        Label:
            id: my_id_label
            size_hint: 1, 0.1
            pos_hint: {"top":1, "right":1}
            text: "Setting Screen"


            #Change AVATAR
        GridLayout:
            canvas:
			    Color:
				    rgb: utils.get_color_from_hex("#3d3c4d")
			    Rectangle:
				    size:self.size
				    pos: self.pos
		    pos_hint: {"top":.9,"left":1}
		    size_hint:1, 0.1
        ImageButton:

            size_hint: .5, 0.1
            pos_hint: {"top":.9, "left":1}
            source: "icon/woman-5.png"
            on_release:
                print("Change Avatar")
                app.change_screen("ChangeScreen")
        LabelButton:
            size_hint: .5, 0.1
            pos_hint: {"top":.9, "right":1}
            text: "Change Avatar"
            on_release:
                print("Change Avatar")
                app.change_screen("ChangeScreen")

