<PerfilScreen>

    GridLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#3d3c4d")
            Rectangle:
                size:self.size
                pos: self.pos
        rows: 5
        pos_hint: {"top":.95,"right":.3}
        size_hint: 0.2, 0.8
        spacing: 30,30
        Image:
            source: "icon/basketball-jersey.png"
        Image:
            source: "icon/019-documents.png"
        Image:
            source: "icon/033-location.png"
        Image:
            source: "icon/039-phone call.png"
    GridLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#3d3c4d")
            Rectangle:
                size:self.size
                pos: self.pos
        rows: 5
        pos_hint: {"top":.95,"right":.9}
        size_hint: 0.6, 0.8
        spacing: 30,30
        TextInput:
            hint_text: "Nombre"
            id: Nombre
            on_text:
                self.background_color = (0.9 ,0.9,0.9,1)
        TextInput:
            hint_text: "Apellido"
            id: Apellido
            on_text:
                self.background_color = (0.9 ,0.9,0.9,1)
        TextInput:
            hint_text: "Direccion"
            id: Direccion
            on_text:
                self.background_color = (0.9 ,0.9,0.9,1)
        TextInput:
            hint_text: "Telefono"
            id: Telefono
            on_text:
                self.background_color = (0.9 ,0.9,0.9,1)
    GridLayout:
		rows: 2
		pos_hint: {"top":.11,"right":0.4}
        size_hint:0.1, 0.1

		ImageButton:
			source: "icon/cloud-computing.png"
			on_release:
				app.add_perfil()

		LabelButton:
            text: "Actualizar Perfil"
			on_release:
				app.add_perfil()
    GridLayout:
		cols:1
		pos_hint: {"top":.11,"right":0.7}
        size_hint:0.1, 0.1
		ImageButton:
			source: "icon/home.png"

			on_release:
				app.change_screen("SettingScreen")