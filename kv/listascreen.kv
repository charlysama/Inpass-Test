<ListaScreen>:

	FloatLayout:
        ScrollView:
		    pos_hint: {"top":.9,"left":1}
			size_hint: 1, 0.8

		    GridLayout:
			    id: pac_banner
			    size_hint_y: None
                spacing: 10,10
                height: self.minimum_height
			    row_default_height: '100dp'
			    row_force_default: True
			    canvas:
				    Color:
					    rgb: utils.get_color_from_hex("#8887ab")
				    Rectangle:
					    size:self.size
					    pos: self.pos
			    cols: 1

		GridLayout:
			cols:1
			pos_hint: {"top":.1,"right":0.5}
            size_hint:0.1, 0.1
			ImageButton:
				source: "icon/home.png"

				on_release:
					app.change_screen("HomeScreen")